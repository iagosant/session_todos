<div class="section valign-wrapper">
  <div class="ms-login card">
    <div class="card-title valign-wrapper center-align" >
      <%= image_tag "sessions_logo.png", :size => "171x55", :alt => "Facebook", :title => "Facebook"%>
    </div>
    <div class="white card-content">
      <div class="row">
        <div class="col s12">
          <%= form_tag '/login' do %>
          <div class="input-field">
            <%= text_field_tag :email %>
            <label for="email" class="">Email</label>
          </div>
          <div class="input-field">
            <%= password_field_tag :password %>
            <label for="password" class="">Password</label><br>
            <%= link_to "(forgot password)", new_password_reset_path %>
          </div>
          <a class="waves-effect waves-light btn"><%= submit_tag "Enter" %></a>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col s12 m6 left-align">
        <%= link_to 'Create account', new_user_path %>
      </div>
    </div>
  </div>
</div>
