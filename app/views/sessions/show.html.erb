<p id="notice"><%= notice %></p>


  <strong>User:</strong>
    <% @session_users.each do |user| %>
    <ul><%= user.first_name %>
      <table>
        <thead>
          <tr>
            <th>WIPs</th>
            <th>Completeds</th>
            <th>Blockers</th>
          </tr>
        </thead>
        <tbody>
          <tr>

            <td><% @session_wips.where(user_id: user.id, session_id: @session.id).each do |wip| %>
            <ul>
            <li><%= link_to wip.wip_item, edit_wip_path(wip) %></li>
            </ul>
            <% end %></td>

            <td><% @session_completeds.where(user_id: user.id, session_id: @session.id).each do |completed| %>
            <ul>
            <li><%= link_to completed.completed, edit_completed_path(completed) %></li>
            </ul>
            <% end %></td>

            <td><% @session_blockers.where(user_id: user.id, session_id: @session.id).each do |blocker| %>
            <ul>
            <li><%= link_to blocker.blocker, edit_blocker_path(blocker) %></li>
            </ul>
            <% end %></td>

          </tr>
        <tbody>
      </table>
    </ul>
    <% end %>


