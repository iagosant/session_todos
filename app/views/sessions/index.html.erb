<p id="notice"><%= notice %></p>
<div class="section" id="sessions-list">
  <div class="row">
    <div class="col s12 m7">
      <div class="card">
        <div class="card-title">
          <div class="col s12 m9">
            <h1>ALL Sessions</h1>
            <h6>recent activity</h6>
          </div>
          <%= image_tag "all-sessions.png", :height => "62" %>
        </div>
        <div class="input-field col s12 m3">
          <label for="select">Select Date</label>
          <%#= collection_select(nil, 'date_select', Session.all, :created_at, {:prompt=>true}, {:id=>'date_select'}) %>
        </div>
        <div class="input-field col s12 m12">
          <input type="text" name="datepicker" id ="datepicker">
        </div>
        <div class="card-content">
          <table class="striped bordered">
            <tbody>
              <% @sessions.reverse.each do |session| %>
              <tr>
                <% if session.created_at.strftime("%A") == "Monday" %>
                <td><%= link_to session.created_at.strftime("%A-%b-%d"), session %></td>
                <td>week <%= session.created_at.strftime("%W") %></td>
                <% else %>
                <td>
                  <i class="material-icons small">textsms</i>
                </td>
                <td>  <%= link_to session.created_at.strftime("%A")+ " STAND-UP", session %></td>
                <td>  <%= link_to session.created_at.strftime("%b %d"), session %></td>
                <td>  <%= link_to 'Destroy', session, method: :delete %></td>
                <% end %>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="card-action">
          <div class="row center-align">
            <div class="col s12 m12">
              <%= link_to 'All Users', users_path %>
              <%= link_to 'New User', new_user_path %>
              <%= link_to 'New Session', new_session_path %>
            </div>
            <div class="col s12 m12">
              Signed in as <%= current_user.first_name.capitalize %> | <%= link_to "Logout", '/logout' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
