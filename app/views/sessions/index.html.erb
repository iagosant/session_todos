<p id="notice"><%= notice %></p>
<div class="section" id="sessions-list">
  <div class="row">
    <div class="col s12 m5">
      <div class="card">
        <div class="card-title">
          <div class="row">
            <div class="col s12 m9">
              <h1>Team <%= link_to @team.team_name, edit_team_path(@team) %></h1>
              <h6>ALL Sessions</h6>
            </div>
            <div class="col s12 m3 right-align">
              <%= image_tag "all-sessions.png", :height => "62" %>
            </div>
          </div>
        </div>
        <div class="card-content">
          <div class="input-field col s12 m6">
            <label for="select">Select Date</label>
            <input type="text" name="datepicker" id ="datepicker">
            <!-- <input type="date" class="datepicker"> -->
          </div>
          <table class="">
            <tbody>
              <% @sessions.reverse.each do |session| %>
              <tr>
                <% if session.created_at.strftime("%A") == "Monday" %>
                <td><%= image_tag "wip.png", :height => "15" %></td>
                <td><%= link_to session.created_at.strftime("%A") + " STAND-UP", session %></td>
                <td><%= link_to session.created_at.strftime("%b %d"), session %></td>
                <td> <a data-confirm="Delete this session?" rel="nofollow" data-method="delete" href="/sessions/1">
                  <i class="small material-icons">delete</i>
                </a>
              </td>
              <% else %>
              <td>
                <%= image_tag "wip.png", :height => "15" %>
              </td>
              <td><%= link_to session.created_at.strftime("%A")+ " STAND-UP", session %></td>
              <td><%= link_to session.created_at.strftime("%b %d"), session %></td>
              <td><a data-confirm="Delete this session?" rel="nofollow" data-method="delete" href="/sessions/1">
                <i class="small material-icons">delete</i>
              </a>
            </td>
            <% end %>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="card-action">
      <div class="row center-align">
        <div class="col s12 m12">
          <%= link_to 'All Users', users_path %>
          <%= link_to 'New User', new_user_path %>
          <%= link_to 'New Session', new_session_path %>
        </div>
        <div class="col s12 m12 signed_user">
          Signed in as <%= link_to current_user.first_name.capitalize, edit_user_path(current_user) %> | <%= link_to "Logout", '/logout' %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
